<!-- Write HTML for the login landing page here -->
<div class="bg-info container">
    <div class="bg-primary row">
        <div class="text-center col-xs-12">
            <h1 class="display-1">LA Street Safety Portal - View Reports</h1>
        </div>
    </div>
    <h2 class="display-2">Reports Submitted by {{user}}</h2>
    <button onclick="location.href='/';" class="btn btn-primary">Return Home</button>
    
    <div class="row">
        <form id="searchIncidents">
            <div class="form-group">
                <div class="col-sm-2">
                    Filters
                </div>
                <div class="col-sm-8">
                    <div class="row">
                        <div class="col-sm-3">Date:</div>
                        <div class="col-sm-4">
                        <input type="date" class="form-control" name="searchByDateBegin"> 
                        </div>
                        <div class="col-sm-1">-</div>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" name="searchByDateEnd">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">Incident Type: </div>
                        <div class="col-sm-9">
                            <select id = "type" class="form-control" name="searchByType" placeholder="Enter incident type">
                                <option value="accident">Accident</option>
                                <option value="near_miss">Near Miss</option>
                                <option value="other">Other</option>
                            </select></br>
                        </div>
                    </div>

                </div>
                <div class="col-sm-2">
                    <input type="submit" class="btn btn-primary" name="search">
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-sm-12">
            {{#if reports}} 
            <table id="reportLog" class="table table-striped">
                <tr>
                    <th scope="col">Options</th>
                    <th scope="col">Incident Date</th>
                    <th scope="col">Title</th>
                    <th scope="col">Incident Type</th>
                </tr>
                {{#each reports}}
                <tr id="{{this.id}}">
                    <td>
                        <button onclick="location.href='/viewUserReports/{{this.id}}';" class="btn btn-primary">View</button>
                    </td>
                    <td>
                        {{this.incidentDate}}
                    </td>
                    <td>
                        {{this.title}}
                    </td>
                    <td>
                        {{this.incidentType}}
                    </td>
                </tr>
                {{/each}}
            </table>
            {{/if}}
        </div>
    </div>
</div>
